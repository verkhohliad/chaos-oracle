# ============================================================
# ChaosOracle Agent Configuration
# Copy this file to .env and fill in real values.
# ============================================================

# ---- Agent wallets (hex-encoded private keys) ----
WORKER_PRIVATE_KEY=0xYOUR_WORKER_PRIVATE_KEY_HERE
VERIFIER_PRIVATE_KEY=0xYOUR_VERIFIER_PRIVATE_KEY_HERE

# ---- ChaosChain ----
CHAOSCHAIN_GATEWAY_URL=https://gateway.chaoscha.in
CHAOSCHAIN_NETWORK=ethereum_sepolia

# ---- Ethereum Sepolia RPC ----
SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# ---- Contract addresses (update after deployment) ----
CHAOS_ORACLE_REGISTRY_ADDRESS=0x0000000000000000000000000000000000000000
ERC_8004_IDENTITY_ADDRESS=0x0000000000000000000000000000000000000000
REPUTATION_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000

# ---- LLM (for Researcher and Auditor) ----
OPENAI_API_KEY=sk-YOUR_OPENAI_KEY_HERE
OPENAI_MODEL=gpt-5-2025-08-07
OPENAI_MODEL2=gpt-4.1-2025-04-14
OPENAI_MODEL3=gpt-5-mini-2025-08-07

# ---- Polling ----
POLL_INTERVAL_SECONDS=5

# ---- Staking (in wei) ----
WORKER_STAKE=1000000000000000
VERIFIER_STAKE=1000000000000000

# ---- Arweave (optional -- leave empty for stub CIDs in dev) ----
ARWEAVE_WALLET_PATH=
